rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return get(/databases/$(database)/documents/students/$(request.auth.uid)).data.isAdmin == true;
    }
    match /students/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && isAdmin();
    }
    match /messages/{messageId} {
      allow read: if request.auth != null && (resource.data.studentUid == request.auth.uid || isAdmin());
      allow create: if request.auth != null && (request.resource.data.studentUid == request.auth.uid || isAdmin());
    }
    match /applications/{appId} {
      allow create: if true;
      allow read, update: if request.auth != null && isAdmin();
    }
  }
}
